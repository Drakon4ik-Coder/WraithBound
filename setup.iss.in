[Setup]
AppName=WraithBound
AppVersion=1.0.0
DefaultDirName={pf}\WraithBound
DefaultGroupName=WraithBound
OutputDir=.
OutputBaseFilename=WraithBoundInstaller
Compression=lzma
SolidCompression=yes

[Files]
Source: "@CMAKE_BINARY_DIR@\bin\Release\WraithBound.exe"; DestDir: "{app}"; Flags: ignoreversion
Source: "@CMAKE_BINARY_DIR@\bin\Release\*.dll"; DestDir: "{app}"; Flags: ignoreversion
Source: "@CMAKE_BINARY_DIR@\bin\Release\res\*"; DestDir: "{app}\res"; Flags: ignoreversion recursesubdirs

[Icons]
Name: "{group}\WraithBound"; Filename: "{app}\WraithBound.exe"
